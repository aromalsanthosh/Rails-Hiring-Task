<div style="text-align: center;">
  <h2>Employee Details</h2>
  
  <div style="margin-bottom: 10px;">
    <a href="<%= departments_path %>" style="margin-bottom: 2px; background-color: #007bff; color: #fff; padding: 6px 12px; border-radius: 4px; text-decoration: none; display: inline-block;">Go to Departments</a>
  </div>
  
  <table style="margin: 0 auto; text-align: left; border-collapse: collapse; width: 70%;">
    <thead>
      <tr style="background-color: #f5f5f5;">
        <th style="border: 1px solid #ddd; padding: 8px;">First Name</th>
        <th style="border: 1px solid #ddd; padding: 8px;">Last Name</th>
        <th style="border: 1px solid #ddd; padding: 8px;">Email</th>
        <th style="border: 1px solid #ddd; padding: 8px;">Phone</th>
        <th style="border: 1px solid #ddd; padding: 8px;">Salary</th>
        <th style="border: 1px solid #ddd; padding: 8px;">Department</th>
        <th style="border: 1px solid #ddd; padding: 8px;">Edit Department</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr style="border: 1px solid #ddd;">
          <td style="border: 1px solid #ddd; padding: 8px;"><%= employee.first_name %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= employee.last_name %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= employee.email_address %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= employee.phone %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= employee.salary %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= employee.department.name %></td>
          <td style="border: 1px solid #ddd; padding: 8px;">
            <a href="<%= edit_employee_path(employee) %>" style="background-color: #007bff; color: #fff; padding: 6px 12px; border-radius: 4px; text-decoration: none;">Edit Department</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
