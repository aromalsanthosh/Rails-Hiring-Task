<div style="text-align: center;">
  <h2>Departments</h2>
  
  <table style="margin: 0 auto; text-align: left; border-collapse: collapse; width: 70%;">
    <thead>
      <tr style="background-color: #f5f5f5;">
        <th style="border: 1px solid #ddd; padding: 8px;">Department Name</th>
        <th style="border: 1px solid #ddd; padding: 8px;">Number of Employees</th>
      </tr>
    </thead>
    <tbody>
      <% @departments.each do |department| %>
        <tr style="border: 1px solid #ddd;">
          <td style="border: 1px solid #ddd; padding: 8px;"><%= department.name %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= department.employees.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
